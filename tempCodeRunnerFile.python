import datetime

done = False
cnt = 0
crystal_spawn_time = datetime.datetime.now()  # Получить текущее время

while not done:
    current_time = datetime.datetime.now()  # Получить текущее время

    # проверяю прошло ли 5 секунд
    if (current_time - crystal_spawn_time).total_seconds() >= 5:
        print("Hello")
        crystal_spawn_time = current_time
        cnt += 1

    if cnt == 3:
        print("code end")
        done = True
